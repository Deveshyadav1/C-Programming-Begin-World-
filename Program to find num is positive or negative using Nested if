#include<stdio.h>
#include<ctype.h>
int main()
{
    int num;
    printf("\nEnter Your number:");
    scanf("%d",&num);
    if(isalpha(num))
    {
        printf("\nSorry This is a character !");
    }
    else if(num > 0.0)
    {
        printf("\n %d is a Positive number",num);
    }
    else if(num < 0.0)
    {
        printf("\n %d is a negative number",num);
    }
    else
    {
        printf("\n You Enterd  0 ");
    }
    return 0;
}

