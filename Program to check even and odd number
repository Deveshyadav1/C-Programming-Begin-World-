#include<stdio.h>
int main()
{
    int num;
    while(1)
    {
    printf("\n:Enter number :");
    scanf("%d",&num);
    if(num%2==0)
    {
        printf("%d : is even",num);
        printf("\n");
    }
    else
    {
        printf("%d : is odd",num);
        printf("\n");
    }
    }
    return 0;
}
